ALERT Rule_1
  IF metric1 - metric2 > 0.25
  FOR 4m
  LABELS { serviceID = "NF777777" }
  ANNOTATIONS { 
    summary = "Instance {{ $labels.instance }} down",
    description = "{{ $labels.instance }} of job {{ $labels.job }} has been down for more than 5 minutes.",
}
ALERT Rule_2
  IF metric3 - metric4 > 0.25
  FOR 4m
  LABELS { serviceID = "NF777777" }
  ANNOTATIONS { 
    summary = "Instance {{ $labels.instance }} down",
    description = "{{ $labels.instance }} of job {{ $labels.job }} has been down for more than 5 minutes.",
}

